:root {
  /* Primary Theme (Default) */
  --bg-gradient: linear-gradient(135deg, #1d2671, #c33764);
  --box-bg: rgba(0, 0, 0, 0.35);
  --text-color: #fff;
  --input-bg: #fff;
  --input-text: #000;
  --modal-bg: #fff;
  --modal-text: #000;
  --settings-modal-bg: #fff;
  --settings-modal-text: #333;
  --btn-start-bg: #2ecc71;
  --btn-start-hover: #27ae60;
  --btn-stop-bg: #e67e22;
  --btn-reset-bg: #e74c3c;
  --btn-test-bg: #3498db;
  --btn-mute-bg: #7f8c8d;
  --custom-file-bg: none;
}

[data-theme="dark"] {
  --bg-gradient: linear-gradient(to bottom, #121212, #1f1f1f);
  --box-bg: rgba(30, 30, 30, 0.95);
  --text-color: #e0e0e0;
  --input-bg: #2c2c2c;
  --input-text: #e0e0e0;
  --modal-bg: #2d2d2d;
  --modal-text: #e0e0e0;
  --settings-modal-bg: #2d2d2d;
  --settings-modal-text: #e0e0e0;

  --btn-start-bg: #1565c0;
  --btn-start-hover: #6e776f;
  --btn-stop-bg: #822e2e;
  --btn-reset-bg: #424242;
  --btn-test-bg: #1565c0;
  --btn-mute-bg: #37474f;
}

[data-theme="light"] {
  --bg-gradient: linear-gradient(120deg, #fdfbfb 0%, #ebedee 100%);
  --box-bg: #ffffff;
  --text-color: #2c3e50;
  --input-bg: #ecf0f1;
  --input-text: #2c3e50;
  --modal-bg: #fff;
  --modal-text: #000;
  --settings-modal-bg: #fff;
  --settings-modal-text: #333;

  --btn-start-bg: #2c3e50;
  --btn-start-hover: #1a252f;
  --btn-stop-bg: #95a5a6;
  --btn-reset-bg: #bdc3c7;
  --btn-test-bg: #34495e;
  --btn-mute-bg: #7f8c8d;
}

/*Glassy Theme  */
[data-theme="glassy"] {
  --bg-gradient: linear-gradient(135deg, #e0c3fc 0%, #8ec5fc 100%);

  --box-bg: rgba(255, 255, 255, 0.2);
  --text-color: #1a252f;
  --input-bg: rgba(255, 255, 255, 0.4);
  --input-text: #1a252f;
  --modal-bg: rgba(255, 255, 255, 0.65);
  --modal-text: #1a252f;
  --settings-modal-bg: rgba(255, 255, 255, 0.65);
  --settings-modal-text: #1a252f;

  /* Icy/Glassy Buttons - Liquid-like */
  --btn-start-bg: rgba(255, 255, 255, 0.35);
  --btn-start-hover: #6faef5; 
  --btn-stop-bg: rgba(255, 255, 255, 0.35);
  --btn-reset-bg: rgba(255, 255, 255, 0.35);
  --btn-test-bg: rgba(255, 255, 255, 0.35);
  --btn-mute-bg: rgba(255, 255, 255, 0.35);
  --custom-file-bg: rgba(255, 255, 255, 0.25);
}

/* Glassy Theme Specific Overrides */
[data-theme="glassy"] .timer-box {
  backdrop-filter: blur(12px) saturate(150%);
  -webkit-backdrop-filter: blur(12px) saturate(150%);
  border: 1px solid rgba(255, 255, 255, 0.5);
  box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.15);
  background: linear-gradient(
    145deg,
    rgba(255, 255, 255, 0.3) 0%,
    rgba(255, 255, 255, 0.1) 100%
  );
}

[data-theme="glassy"] button {
  backdrop-filter: blur(8px);
  border: 1px solid rgba(255, 255, 255, 0.4);
  box-shadow: inset 0 0 10px rgba(255, 255, 255, 0.3),
    0 4px 6px rgba(0, 0, 0, 0.05);
  color: #1a252f;
  font-weight: 700;
  position: relative;
  overflow: hidden;
}

[data-theme="glassy"] button::before {
  content: "";
  position: absolute;
  top: 0;
  left: -50%;
  width: 100%;
  height: 100%;
  background: linear-gradient(
    to right,
    transparent,
    rgba(255, 255, 255, 0.6),
    transparent
  );
  transform: skewX(-25deg);
  transition: 0.5s;
  opacity: 0;
}

[data-theme="glassy"] button:hover::before {
  animation: shine 0.7s;
  opacity: 1;
  left: 150%;
}

@keyframes shine {
  100% {
    left: 150%;
  }
}

[data-theme="glassy"] button:hover {
  background-color: rgba(255, 255, 255, 0.55);
  transform: translateY(-2px);
  box-shadow: 0 8px 15px rgba(0, 0, 0, 0.1);
  border-color: rgba(255, 255, 255, 0.8);
}

[data-theme="glassy"] input,
[data-theme="glassy"] select {
  border: 1px solid rgba(255, 255, 255, 0.4);
  backdrop-filter: blur(8px);
  background: rgba(255, 255, 255, 0.25);
  color: #1a252f;
}

[data-theme="glassy"] select option {
  background-color: #fff;
  color: #333;
}

[data-theme="glassy"] hr {
  background: rgba(255, 255, 255, 0.4);
  height: 2px;
  border-radius: 2px;
}

* {
  box-sizing: border-box;
  font-family: "Segoe UI", Tahoma, sans-serif;
}

body {
  margin: 0;
  min-height: 100vh;
  display: flex;
  justify-content: center;
  align-items: center;
  background: var(--bg-gradient);
  color: var(--text-color);
  transition: all 0.3s;
}

body.rtl {
  direction: rtl;
}

.timer-box {
  width: 100%;
  max-width: 360px;
  background: var(--box-bg);
  padding: 25px;
  border-radius: 16px;
  box-shadow: 0 12px 30px rgba(0, 0, 0, 0.4);
  transition: all 0.3s;
}

/* Light theme specific shadow adjustment */
[data-theme="light"] .timer-box {
  box-shadow: 0 12px 30px rgba(0, 0, 0, 0.1);
}

h1 {
  text-align: center;
  margin-top: 0;
}

.inputs {
  display: flex;
  gap: 10px;
  margin-bottom: 15px;
}

body.rtl .inputs {
  flex-direction: row-reverse;
}

.inputs input {
  width: 50%;
}

input,
select {
  padding: 10px;
  border-radius: 8px;
  border: none;
  outline: none;
  text-align: center;
  font-size: 16px;
  background-color: var(--input-bg);
  color: var(--input-text);
}
#customFile {
  background-color: var(--custom-file-bg);
  color: var(--text-color);
}
#time {
  font-size: 46px !important;
  text-align: center;
  margin: 5px 0;
  font-weight: bold;
  display: inline-block;
  width: 100%;
  margin-left: 35px;
}

.buttons {
  display: flex;
  gap: 8px;
  margin-bottom: 15px;
  flex-wrap: wrap;
}

button {
  flex: 1;
  padding: 10px;
  border: none;
  border-radius: 8px;
  font-size: 15px;
  cursor: pointer;
  transition: 0.3s;
  color: #fff;
}

.start {
  background: var(--btn-start-bg);
}

.stop {
  background: var(--btn-stop-bg);
}

.reset {
  background: var(--btn-reset-bg);
}

.test {
  background: var(--btn-test-bg);
}

.mute {
  background: var(--btn-mute-bg);
}

button:hover {
  opacity: 0.85;
}

hr {
  border: none;
  height: 1px;
  background: rgba(255, 255, 255, 0.2);
  margin: 18px 0;
}

/* Adjust HR for light/dark themes */
[data-theme="light"] hr,
[data-theme="dark"] hr {
  background: rgba(128, 128, 128, 0.3);
}

.control {
  margin-bottom: 12px;
}

/* ===== Checkbox Ùˆ Pomodoro ===== */
#pomodoroLabel {
  font-weight: bold;
  display: flex;
  align-items: center;
  gap: 0.5em;
  margin-bottom: 5px;
  font-size: 14px;
  color: var(--text-color);
}

#pomodoroCycle {
  width: 16px;
  height: 16px;
}

#time-container {
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
  margin: 10px 0;
}

#settingsBtn {
  position: absolute;
  left: -8px;
  padding: 4px 8px;
  font-size: 37px;
  border-radius: 6px;
  border: none;
  cursor: pointer;
  color: var(--text-color);
  background: transparent;
  transition: 0.3s;
}

#settingsBtn:hover {
  opacity: 0.85;
  background: rgba(255, 255, 255, 0.1);
}
[data-theme="light"] #settingsBtn:hover {
  background: rgba(0, 0, 0, 0.1);
}

input[type="range"],
select {
  width: 100%;
  margin-top: 5px;
}

@media (max-width: 400px) {
  #time {
    font-size: 36px;
  }
}

/* Modal */
.modal {
  display: none;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

#alertModal {
  background: rgba(0, 0, 0, 0.6);
}

#alertModal .modal-content {
  background: var(--modal-bg);
  color: var(--modal-text);
  padding: 20px 25px;
  border-radius: 12px;
  text-align: center;
  width: 80%;
  max-width: 300px;
}

#alertModal button,
#pomodoroModal button,
#settingsModal button {
  background: var(--btn-start-bg);
  color: #fff;
  border: none;
  padding: 10px 20px;
  border-radius: 8px;
  margin-top: 15px;
  cursor: pointer;
  transition: 0.3s;
}

[data-theme="glassy"] #alertModal button,
[data-theme="glassy"] #pomodoroModal button,
[data-theme="glassy"] #settingsModal button {
  color: #1a252f;
  font-weight: bold;
  background: #8ec5fc;
  border: 1px solid rgba(255, 255, 255, 0.4);
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
}

/* Pomodoro Modal */
#pomodoroModal {
  background: rgba(0, 0, 0, 0.5);
  z-index: 1001;
}

#pomodoroModal .modal-content {
  background: var(--modal-bg);
  color: var(--modal-text);
  padding: 20px 25px;
  border-radius: 12px;
  text-align: center;
  width: 80%;
  max-width: 300px;
}

#pomodoroModal .pomo-input {
  display: flex;
  flex-direction: column;
  margin-bottom: 10px;
}

#pomodoroModal .pomo-input label {
  font-size: 12px;
  margin-bottom: 2px;
}

#pomoOkBtn {
  background: #2ecc71;
}

/* Settings Modal */
#settingsModal {
  background: rgba(0, 0, 0, 0.5);
  z-index: 9999;
}

#settingsModal .modal-content {
  background: var(--settings-modal-bg);
  padding: 25px 30px;
  border-radius: 12px;
  min-width: 280px;
  max-width: 90%;
  text-align: center;
  box-shadow: 0 5px 20px rgba(0, 0, 0, 0.3);
  color: var(--settings-modal-text);
}

#settingsModal h3 {
  margin-bottom: 20px;
  font-size: 20px;
}

#settingsModal select {
  width: 60%;
  padding: 8px 10px;
  margin-bottom: 20px;
  border-radius: 6px;
  border: 1px solid #ccc;
  font-size: 16px;
}

[data-theme="dark"] #settingsModal select {
  border: 1px solid #555;
}

#settingsModal button {
  padding: 10px 25px;
  background-color: var(--btn-start-bg);
  color: white;
  border: none;
  border-radius: 6px;
  font-size: 16px;
  cursor: pointer;
  transition: background 0.3s;
}

/* Modal Button Hover Effects */
#alertModal button:hover,
#pomodoroModal button:hover,
#settingsModal button:hover {
  background: var(--btn-start-hover);
  opacity: 1; /* Ensure full opacity for solid colors */
}

/* Specific override for Glassy to beat the normal state specificity */
[data-theme="glassy"] #alertModal button:hover,
[data-theme="glassy"] #pomodoroModal button:hover,
[data-theme="glassy"] #settingsModal button:hover {
  background: var(--btn-start-hover);
}

/* Pomodoro Checkbox */
#pomodoroLabel {
  font-weight: bold;
  display: flex;
  align-items: center;
  gap: 0.5em;
  margin-bottom: 5px;
  font-size: 14px;
  color: var(--text-color);
}

#pomodoroCycle {
  width: 18px;
  height: 18px;
  accent-color: #2ecc71;

  cursor: pointer;
}

.pomodoro-control {
  display: flex;
  align-items: center;
  gap: 8px;
}
